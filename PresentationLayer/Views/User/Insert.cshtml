@model PresentationLayer.Models.InsertViewModels.UserInsertViewModel
@using Entities.Enums;
@using Microsoft.AspNetCore.Mvc.Rendering;

@{
    ViewData["Title"] = "Insert";
}

<h1>Insert</h1>

<h4>Insert a new user</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Insert">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table>
                <tr>
                    <th scope="col">
                        <label asp-for="Name" class="control-label"></label>
                    </th>
                    <th scope="col">
                        <label asp-for="LastName" class="control-label"></label>
                    </th>
                </tr>
                <tr>
                    <td>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </td>
                </tr>

                <tr>
                    <th scope="col">
                        <label asp-for="DateOfBirthday" class="control-label"></label>
                    </th>
                    <th scope="col">
                        <label asp-for="Gender" class="control-label"></label>
                    </th>
                </tr>
                <tr>
                    <td>
                        <input asp-for="DateOfBirthday" class="form-control" />
                        <span asp-validation-for="DateOfBirthday" class="text-danger"></span>
                    </td>
                    <td>
                        <select asp-for="Gender" class="dropdown">
                            @{
                                var genderList = Enum.GetNames(typeof(EGender));
                                foreach (var gender in genderList)
                                {
                                    <option value="@gender" class="dropdown-item">@gender</option>
                                };
                            };
                        </select>
                    </td>
                </tr>
                <tr>
                    <th scope="col">
                        <label asp-for="Email" class="control-label"></label>
                    </th>
                    <th scope="col">
                        <label asp-for="Password" class="control-label"></label>
                    </th>
                </tr>
                <tr>
                    <td>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th scope="col">
                        <label asp-for="Country" class="control-label"></label>
                    </th>
                    <th scope="col">
                        <label asp-for="State" class="control-label"></label>
                    </th>
                </tr>
                <tr>
                    <td>
                        <input asp-for="Country" class="form-control" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="State" class="form-control" />
                        <span asp-validation-for="State" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th scope="col">
                        <label asp-for="City" class="control-label"></label>
                    </th>
                </tr>
                <tr>
                    <td>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </td>
                </tr>
            </table>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
